<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="number_keys">
        <item name="android:background">@color/firstColor</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/number_color</item>
        <item name="android:textSize">40sp</item>

    </style>

    <style name="operator_keys">
        <item name="android:background">@color/secondColor</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/operator_color</item>
        <item name="android:textSize">40sp</item>
    </style>
</resources>