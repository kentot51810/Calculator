<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/display_text"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:background="#4C4C4C"
        android:fontFamily="monospace"
        android:gravity="right|center"
        android:hint="0"
        android:textColor="#F6F6F6"
        android:textColorHint="#F6F6F6"
        android:textSize="45sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4">

        <Button
            android:id="@+id/cancel_button"
            style="@style/number_keys"
            android:text="C" />

        <Button
            android:id="@+id/pos_neg_button"
            style="@style/number_keys"
            android:text="+/-" />

        <Button
            android:id="@+id/percentage_button"
            style="@style/number_keys"
            android:text="%" />

        <Button
            android:id="@+id/division_button"
            style="@style/operator_keys"
            android:text="รท" />

        <Button
            android:id="@+id/number_seven_button"
            style="@style/number_keys"
            android:text="7" />

        <Button
            android:id="@+id/number_eight_button"
            style="@style/number_keys"
            android:text="8" />

        <Button
            android:id="@+id/number_nine_button"
            style="@style/number_keys"
            android:text="9" />

        <Button
            android:id="@+id/multiplication_button"
            style="@style/operator_keys"
            android:text="ร" />

        <Button
            android:id="@+id/number_four_button"
            style="@style/number_keys"
            android:text="4" />

        <Button
            android:id="@+id/number_five_button"
            style="@style/number_keys"
            android:text="5" />

        <Button
            android:id="@+id/number_six_button"
            style="@style/number_keys"
            android:text="6" />

        <Button
            android:id="@+id/minus_button"
            style="@style/operator_keys"
            android:text="-" />

        <Button
            android:id="@+id/number_one_button"
            style="@style/number_keys"
            android:text="1" />

        <Button
            android:id="@+id/number_two_button"
            style="@style/number_keys"
            android:text="2" />

        <Button
            android:id="@+id/number_three_button"
            style="@style/number_keys"
            android:text="3" />

        <Button
            android:id="@+id/addition_button"
            style="@style/operator_keys"
            android:text="+" />

        <Button
            android:id="@+id/number_zero_button"
            style="@style/number_keys"
            android:layout_columnSpan="2"
            android:text="0" />

        <Button
            android:id="@+id/decimal_button"
            style="@style/number_keys"
            android:gravity="center|top"
            android:text="." />

        <Button
            android:id="@+id/equal_button"
            style="@style/operator_keys"
            android:text="=" />


    </GridLayout>


</LinearLayout>